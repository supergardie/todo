<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="/style.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
    <title><%= pagetitle %></title>
</head>

<body class="<%= title %>">    
        
    <div class="container">

        <!--<div class="header">
            <h1>To Do</h1>
        </div>-->

        <form action="/todo" method="post">
            <input type="text" name="todoItem" placeholder="What do you need to do?" />
            <button type="submit" name="add">ADD</button>
        </form>

        <% if(items.length) { %>
        <div class="todos">

            <% for(var ii = 0; ii < items.length; ii++) { %>
            <div class="row">
                <div class="cell">
                    <% if(done[ii]) { %><s><% } %><%= items[ii] %><% if(done[ii]) { %></s><% } %>
                </div>
                <div class="cell">
                    <a href="/done/<%= num[ii] %>"<i class="material-icons" title="Done">done</i></a>
                </div>
                <div class="cell">
                    <a href="/del/<%= num[ii] %>"<i class="material-icons" title="Delete">clear</i></a>                        
                </div>
            </div>
            <% } %>

        </div>
        <% } %>
            
            <!--<div class="bottom">
                <button type="submit" name="del">Update To Do List</button>
            </div>-->
    </div>
</body>

</html>